<h1> Comments </h1>


<table class="table table-sm">
  <thead>
    <tr>
      <th scope="col">User</th>
      <th scope="col">Message</th>
    </tr>
  </thead>
  <tbody>
    <% @comments.each do |comment| %>
        <tr>
            <td><%= comment.user_id %></td>
            <td><%= comment.message %></td>
        </tr>
    <% end %>
   
  </tbody>
</table>