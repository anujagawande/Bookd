<h1> Discussions </h1>


<table class="table table-sm">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Message</th>
      <th scope="col">Comment</th>
    </tr>
  </thead>
  <tbody>
    <% @discussion.each do |discussion| %>
        <tr>
            <td><%= discussion.title %></td>
            <td><%= discussion.message %></td>
        </tr>
    <% end %>
   
  </tbody>
</table>