<main role="main" class="container">

    <div style="width:50%">
        <h1>New Book</h1>
        <table>
            <%= form_with model: @book, local: true do |form| %>
                <div class="field">
                    <%= form.label :title %>
                    <%= form.text_field :title, class: 'form-control' %>
                </div>
                <br>
                <div class="field">
                    <%= form.label :description %>
                    <%= form.text_area :description, class: 'form-control' %>
                </div>
                <br>
                <div class="field">
                    <%= form.label :genre %>
                    <%= form.text_field :genre, class: 'form-control' %>
                </div>
                <br>
                <div class="field">
                    <%= form.label :rating %>
                    <%= form.text_field :rating, class: 'form-control' %>
                </div>
                <br>
                <div class="field">
                    <%= form.label :review %>
                    <%= form.text_area :review, class: 'form-control' %>
                </div>
                <br>
                <div class="actions">
                    <%= form.submit 'Add New Book', class: 'btn btn-primary' %>
                </div>
            <% end %>
        </table>
    </div>

</main><!-- /.container -->