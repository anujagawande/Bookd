<h1> Book Clubs </h1>


<table class="table table-sm">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Location</th>
      <th scope="col">Meet Date</th>
      <th scope="col">Book ID</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @book_club.each do |book_club| %>
        <tr>
            <td><%= book_club.name %></td>
            <td><%= book_club.location %></td>
            <td><%= book_club.meet_date %></td>
            <td><%= book_club.book_id %></td>
            <td>
              <%= link_to 'Show', book_club_path(book_club) %> |
              <%= link_to 'Join', edit_book_club_path(book_club) %>
            </td>
        </tr>
    <% end %>
  </tbody>
</table>
<!--Section end-->